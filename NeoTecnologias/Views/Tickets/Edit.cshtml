@model NeoTecnologias.Models.Ticket

@{
    ViewBag.Title = "Editar Incidencia";
}

<h2>Editar Incidencia</h2>

<form method="post">
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.Id) <!-- Campo oculto para el ID -->

    <div class="form-group">
        <label>Título</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Descripción</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3, required = "required" })
    </div>

    <div class="form-group">
        <label>Estado</label>
        @Html.DropDownListFor(m => m.Status, new SelectList(new[] { "Abierta", "En Progreso", "Resuelta", "Cerrada" }), new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Prioridad</label>
        @Html.DropDownListFor(m => m.Priority, new SelectList(new[] { "Baja", "Media", "Alta", "Crítica" }), new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Usuario que reporta</label>
        @Html.DropDownList("UserId", ViewBag.Users as SelectList, "-- Seleccione un usuario --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Técnico asignado</label>
        @Html.DropDownList("TechnicianId", ViewBag.Technicians as SelectList, "-- Seleccione un técnico --", new { @class = "form-control", required = "required" })
        @Html.ValidationMessageFor(m => m.TechnicianId, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
